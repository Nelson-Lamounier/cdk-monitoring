{
    "compilerOptions": {
        "target": "ES2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "rootDir": "./scripts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "noEmit": true
    },
    "include": ["scripts/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
