  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "ðŸ“Š Data Source Overview",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          },
          "mappings": [
            { "options": { "0": { "text": "DynamoDB Direct" } }, "type": "value" },
            { "options": { "1": { "text": "API Gateway" } }, "type": "value" },
            { "options": { "2": { "text": "Fallback/Cache" } }, "type": "value" }
          ]
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "title": "Active Data Source",
      "type": "gauge",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "nextjs_article_data_source",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "id": 2,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto"
      },
      "title": "Requests/sec by Source",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(nextjs_article_service_requests_total[5m])",
          "legendFormat": "{{source}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "id": 3,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "title": "Total Requests (All Sources)",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(increase(nextjs_article_service_requests_total[1h]))",
          "legendFormat": "Total (1h)",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 200,
      "title": "âš¡ DynamoDB Performance",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 10 },
      "id": 4,
      "options": { "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }, "tooltip": { "mode": "multi" } },
      "title": "DynamoDB Query Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.50, sum(rate(nextjs_dynamodb_query_duration_seconds_bucket[5m])) by (le, operation))",
          "legendFormat": "p50 {{operation}}",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum(rate(nextjs_dynamodb_query_duration_seconds_bucket[5m])) by (le, operation))",
          "legendFormat": "p95 {{operation}}",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.99, sum(rate(nextjs_dynamodb_query_duration_seconds_bucket[5m])) by (le, operation))",
          "legendFormat": "p99 {{operation}}",
          "refId": "C"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50,
            "lineWidth": 1,
            "pointSize": 5
          },
          "unit": "errors/s"
        },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 10 },
      "id": 5,
      "options": { "legend": { "displayMode": "table", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "title": "DynamoDB Errors/sec",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(nextjs_dynamodb_errors_total[5m])",
          "legendFormat": "{{operation}} - {{error_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 20 },
      "id": 300,
      "title": "ðŸ’¾ Cache Effectiveness",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Hits" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Misses" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 10, "w": 8, "x": 0, "y": 21 },
      "id": 6,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "pieType": "donut",
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom", "values": ["percent"] }
      },
      "title": "Cache Hit vs Miss Ratio",
      "type": "piechart",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(nextjs_dynamodb_cache_hits_total)",
          "legendFormat": "Hits",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(nextjs_dynamodb_cache_misses_total)",
          "legendFormat": "Misses",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "pointSize": 5
          },
          "unit": "ops"
        },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 8, "x": 8, "y": 21 },
      "id": 7,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "multi" } },
      "title": "Cache Hit Rate Over Time",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(nextjs_dynamodb_cache_hits_total[5m])",
          "legendFormat": "Hits/sec",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(nextjs_dynamodb_cache_misses_total[5m])",
          "legendFormat": "Misses/sec",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 0.8 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 8, "x": 16, "y": 21 },
      "id": 8,
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area"
      },
      "title": "Cache Hit Ratio",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(nextjs_dynamodb_cache_hits_total[5m])) / (sum(rate(nextjs_dynamodb_cache_hits_total[5m])) + sum(rate(nextjs_dynamodb_cache_misses_total[5m])))",
          "legendFormat": "Hit Ratio",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 },
      "id": 400,
      "title": "ðŸ”¥ Article Service Latency",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "scheme", "schemeName": "Oranges" },
          "custom": {
            "fillOpacity": 80,
            "scaleDistribution": { "type": "log", "log": 2 }
          },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 32 },
      "id": 9,
      "options": {
        "calculate": true,
        "calculation": { "xBuckets": { "mode": "size" }, "yBuckets": { "mode": "size" } },
        "cellGap": 1,
        "color": { "mode": "scheme", "scheme": "Oranges" },
        "yAxis": { "unit": "s" },
        "tooltip": { "mode": "single" }
      },
      "title": "Article Service Latency Heatmap",
      "type": "heatmap",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(increase(nextjs_article_service_duration_seconds_bucket[5m])) by (le)",
          "legendFormat": "{{le}}",
          "format": "heatmap",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 30,
            "pointSize": 5,
            "lineWidth": 2
          },
          "unit": "errors/s"
        },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 32 },
      "id": 10,
      "options": { "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max", "sum"] }, "tooltip": { "mode": "multi" } },
      "title": "Article Service Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(nextjs_article_service_requests_total{status=\"error\"}[5m])",
          "legendFormat": "Errors/sec",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(nextjs_article_service_requests_total{status=\"success\"}[5m])",
          "legendFormat": "Success/sec",
          "refId": "B"
        }
      ]
    }
  ],
