{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowMonitoringAccountAssumeRole",
      "Effect": "Allow",
      "Principal": {
        "AWS": "MONITORING_ACCOUNT_ID_PLACEHOLDER"
      },
      "Action": "sts:AssumeRole",
      "Condition": {
        "StringEquals": {
          "sts:ExternalId": "steampipe-governance"
        }
      }
    }
  ]
}
